#Place cuda snippets here
priority -50

extends c

# Overwrite extended snippets
priority -49

snippet glob "Global Kernel" -b
__global__ void ${1:function_name}(${2}) {
    $0
}
endsnippet

snippet cui "const unsigned int" -b
const unsigned int $0
endsnippet

snippet com "Block Comment" -b
/*
    ${1:${VISUAL:}}
*/
$0
endsnippet
